<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.activity.SmsActivity">

    <com.skyqi.module_base.view.VerifyEditText
        android:id="@+id/vedt_sms_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:minHeight="48dp"
        app:input_number="4"
        app:item_background="@drawable/bg_verify_item"
        app:item_margin="50"
        app:item_text_size="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:size="60" />

    <TextView
        android:id="@+id/tv_sms_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/second_font_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/vedt_sms_code"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="输入短信验证码"
        android:textColor="@color/primary_font_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_sms_tips"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sms_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vedt_sms_code"
        android:text="重新发送(60)"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>